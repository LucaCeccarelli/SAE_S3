<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="practice" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sae_s3.findthebreach.SceneController">
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@pictures/home_button.png" />
                    </image>
                </ImageView>
                <Button onAction="#switchTo" styleClass="bar_button" userData="practice.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@./pictures/practice_button_on.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="bar_button">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@./pictures/play_button.png" />
                            </image>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
            </children>
         <BorderPane.margin>
            <Insets bottom="30.0" left="160.0" />
         </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>

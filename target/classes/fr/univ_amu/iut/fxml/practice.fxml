<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import fr.univ_amu.iut.components.TerminalPane?>

<?import fr.univ_amu.iut.components.SwitchToPaneButton?>
<?import fr.univ_amu.iut.components.SwitchToPlayButton?>

<fx:root id="practice" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox>
            <BorderPane.margin>
                <Insets top="195" left="100"/>
            </BorderPane.margin>
            <Label styleClass="title" fx:id="title"/>
            <Label styleClass="textLeft" fx:id="text"/>
        </VBox>
    </left>
    <right>
        <HBox>
            <BorderPane.margin>
                <Insets top="92" left="10" right="125" bottom="30" />
            </BorderPane.margin>
            <TerminalPane fx:id="terminalPane"/>
        </HBox>
    </right>
    <bottom>
        <HBox spacing="320" alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20" right="150" />
            </BorderPane.margin>
            <HBox alignment="CENTER_LEFT">
                <SwitchToPaneButton fx:id="homeBtn" styleClass="bar_button" userData="fxml/home_logged.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/home_button.png" />
                        </ImageView>
                    </graphic>
                </SwitchToPaneButton>
                <SwitchToPaneButton fx:id="practiceMenuBtn" styleClass="bar_button" userData="fxml/practice_menu.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/practice_button_on.png" />
                        </ImageView>
                    </graphic>
                </SwitchToPaneButton>
                <SwitchToPlayButton fx:id="playBtn" styleClass="bar_button" userData="16,game">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/play_button.png" />
                        </ImageView>
                    </graphic>
                </SwitchToPlayButton>
            </HBox>
            <HBox fx:id="botBtns" alignment="CENTER_RIGHT">
                <Button fx:id="suggestionBtn" styleClass="bar_button">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/suggestion_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="solutionBtn" styleClass="bar_button">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/solution_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </bottom>
    <top>
        <HBox fx:id="topHbox" alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets top="60" right="350"/>
            </BorderPane.margin>
        </HBox>
    </top>
</fx:root>
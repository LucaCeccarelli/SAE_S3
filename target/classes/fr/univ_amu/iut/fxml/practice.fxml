<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import fr.univ_amu.iut.TerminalPane?>

<fx:root id="practice" prefHeight="400.0"  prefWidth="600.0" type="javafx.scene.layout.BorderPane"  xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox>
            <Label fx:id="title"/>
            <Label fx:id="text"/>

        </VBox>
    </left>
    <right>
        <HBox>
            <BorderPane.margin>
                <Insets top="180" left="10" right="125" bottom="30" />
            </BorderPane.margin>
            <TerminalPane/>
        </HBox>
    </right>
    <bottom>
        <HBox spacing="320" alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20" right="150" />
            </BorderPane.margin>
            <HBox alignment="CENTER_LEFT">
                <Button fx:id="homeBtn" styleClass="bar_button" userData="fxml/home_logged.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/home_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="practiceMenuBtn" styleClass="bar_button" userData="fxml/practice_menu.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/practice_button_on.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="playBtn" styleClass="bar_button" userData="fxml/home.fxml">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/play_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Button styleClass="bar_button">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/suggestion_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="bar_button">
                    <graphic>
                        <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../pictures/solution_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </bottom>
</fx:root>